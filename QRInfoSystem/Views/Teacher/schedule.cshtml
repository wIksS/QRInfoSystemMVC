<div class="col-lg-12 center">
    <input type="text" class="form-control" placeholder="Select date " id="mydate" gldp-id="mydate" />
</div>
<div class="center">
    <form class="form-horizontal" name="sheduleForm">
        <div>
            <div class="from">
                <span>Room</span>
                <input type="number" ng-model="shedule.RoomName" required class="form-control shedule-input" placeholder="Room">
            </div>
            <div class="from">
                <span>From</span>
                <input type="text" class="form-control shedule-input" required id="from-hour-picker" placeholder="Select starting hour">
            </div>
            <div class="to">
                <span>To</span>
                <input type="text" id="to-hour-picker" required class="form-control shedule-input" placeholder="Select ending hour">
            </div>
            <div class="center">
                <button ng-click="updateShedule(shedule)" type="submit" class="btn-primary btn">Update shedule</button>
            </div>
        </div>
    </form>
</div>