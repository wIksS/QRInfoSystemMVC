<div class="col-lg-12 container">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 register-form">
        <div class="well bs-component teacher-register">
            <form class="form-horizontal">
                <fieldset >
                    <legend>Register Teacher</legend>
                    <div class="form-group">
                        <label for="firstName" class="col-lg-3 control-label">First Name</label>
                        <div class="col-lg-9">
                            <input type="text" required="" ng-model="teacher.FirstName" class="form-control" id="firstName" placeholder="First Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lastName" class="col-lg-3 control-label">Last Name</label>
                        <div class="col-lg-9">
                            <input type="text" required="" ng-model="teacher.LastName" class="form-control" id="lastName" placeholder="Last Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-lg-3 control-label">Email</label>
                        <div class="col-lg-9">
                            <input type="email" required="" ng-model="teacher.Email" class="form-control" id="email" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title" class="col-lg-3 control-label">Title</label>
                        <div class="col-lg-9">
                            <input type="text"required="" ng-model="teacher.Title"  class="form-control" id="title" placeholder="Title">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="phone" class="col-lg-3 control-label">Phone</label>
                        <div class="col-lg-9">
                            <input type="number"required="" ng-model="teacher.Phone" minlength="10" maxlength="10" maxle class="form-control" id="phone" placeholder="Phone">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" ng-click="register(teacher)" class="btn btn-primary">Register</button>
                            <button type="reset" class="btn btn-default">Cancel</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
