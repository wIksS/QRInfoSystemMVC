<div class="admin">
    <div class="left" ng-controller="RegisterTeacherCtrl" ng-hide="!isLogged">
        <div class="col-lg-12 container" ng-hide="isRegistered">
            <div class="col-lg-3"></div>
            <div class="col-lg-6 register-form">
                <div class="well bs-component teacher-register">
                    <form class="form-horizontal" name="teacherForm">
                        <fieldset>
                            <legend>Register Teacher</legend>
                            <div class="form-group">
                                <label for="firstName" class="col-lg-3 control-label">First Name</label>
                                <div class="col-lg-9">
                                    <input type="text" required="" ng-minlength="3" ng-maxlength="20" ng-model="teacher.FirstName" class="form-control" id="firstName" placeholder="First Name">
                                    <span ng-show="myForm.name.$error.required" class="help-inline">
                                        Required
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="lastName" class="col-lg-3 control-label">Last Name</label>
                                <div class="col-lg-9">
                                    <input type="text" required ng-minlength="3" ng-maxlength="20" ng-model="teacher.LastName" class="form-control" id="lastName" placeholder="Last Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="col-lg-3 control-label">Email</label>
                                <div class="col-lg-9">
                                    <input type="email" required  ng-model="teacher.Email" class="form-control" id="email" placeholder="Email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="title" class="col-lg-3 control-label">Title</label>
                                <div class="col-lg-9">
                                    <input type="text" required ng-minlength="3" ng-maxlength="20" ng-model="teacher.Title" class="form-control" id="title" placeholder="Title">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="phone" class="col-lg-3 control-label">Phone</label>
                                <div class="col-lg-9">
                                    <input type="text" required ng-minlength="3" ng-maxlength="20" ng-model="teacher.Phone" class="form-control" id="phone" placeholder="Phone">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-10 col-lg-offset-2">
                                    <button  type="submit" ng-click="register(teacher);" class="btn btn-primary">Register</button>
                                    <button type="reset" class="btn btn-default">Cancel</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        <div class="qr" ng-hide="!isRegistered" ng-include="'Administration/qrcode'">
        </div>
    </div>
    <div class="left" ng-controller="SheduleCtrl" ng-hide="!isLogged">
        <div class="col-lg-12 center">
            <input type="text" class="form-control" placeholder="Select date " id="mydate" gldp-id="mydate" />
        </div>
        <div class="center">
            <form class="form-horizontal" name="sheduleForm">
                <div>
                    <div class="from">
                        <span>Room</span>
                        <input type="number" ng-model="shedule.RoomName" required class="form-control shedule-input" placeholder="Room">
                    </div>
                    <div class="from">
                        <span>From</span>
                        <input type="text" class="form-control shedule-input" required id="from-hour-picker" placeholder="Select starting hour">
                    </div>
                    <div class="to">
                        <span>To</span>
                        <input type="text" id="to-hour-picker" required class="form-control shedule-input" placeholder="Select ending hour">
                    </div>
                    <div class="center">
                        <button ng-click="updateShedule(shedule)" type="submit" class="btn-primary btn">Update shedule</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="left down" ng-controller="TeacherCtrl" ng-hide="!isLogged">
        <div class="">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone number</th>
                        <th>Title</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="teacher in teachers" ng-click="getShedule(teacher);">
                        <td>{{teacher.FirstName}} {{teacher.LastName}}</td>
                        <td>{{teacher.Email}}</td>
                        <td>{{teacher.Phone}}</td>
                        <td>{{teacher.Title}}</td>
                        <td><button ng-click="delete(teacher.Id)" class="btn btn-default">Delete</button></td>
                    </tr>
                    <tr ng-if="drivers.length == 0">
                        <td colspan="3">
                            <h1>No teachers registered !</h1>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
    <div class="left down" ng-hide="!isLogged">
        <div id="calendar"></div>
    </div>
</div>