<div class="admin">
    <div class="left" ng-controller="RegisterTeacherCtrl" ng-hide="!isAdmin">
        <div ng-include="'teacher/teacherregister'"></div>
        <div ng-hide="!isRegistered" class="register-form">
            <div class="row text-left">
                <button ng-click="isRegistered = false" class="btn btn-default">Back to teacher data</button>
            </div>
            <div ng-include="'teacher/uploadImage'"></div>
            <div class="qr" ng-hide="!isRegistered" ng-include="'Administration/qrcode'">
            </div>
        </div>

    </div>
    <div class="left" ng-hide="!isAdmin">
        <div ng-include="'teacher/schedule'"></div>
    </div>
    <div class="left down" ng-controller="TeacherCtrl" ng-hide="!isAdmin">
        <div class="">
            <table id="admin-table" class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone number</th>
                        <th>Title</th>
                        <th>Excel</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="teacher in teachers" ng-click="getShedule(teacher);">
                        <td ng-click="redirectToImageUpload(teacher.Id)">
                            <img width="50px" height="50px" src="{{teacher.ImagePath}}" ng-if="!!teacher.ImagePath">
                            <img width="50px" height="50px" src="/images/unknown.jpg" ng-if="!teacher.ImagePath">
                        </td>
                        <td>{{teacher.FirstName}} {{teacher.LastName}}</td>
                        <td>{{teacher.Email}}</td>
                        <td>{{teacher.Phone}}</td>
                        <td>{{teacher.Title}}</td>
                        <td style="text-align:center" ng-click="redirectToExcel(teacher.Id)"><img src="/Images/excel.jpg" width="30px" /></td>
                        <td><button ng-click="delete(teacher.Id)" class="btn btn-default">Delete</button></td>
                    </tr>
                    <tr ng-if="drivers.length == 0">
                        <td colspan="3">
                            <h1>No teachers registered !</h1>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
    <div class="left down" ng-hide="!isAdmin">
        <div id="calendar"></div>
    </div>
</div>