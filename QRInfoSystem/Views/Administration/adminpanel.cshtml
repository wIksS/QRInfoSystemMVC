<div class="admin">
    <div class="left" ng-controller="RegisterTeacherCtrl" ng-hide="!isAdmin">
        <div ng-include="'teacher/teacherregister'"></div>
        <div ng-hide="!isRegistered">
            @using (Html.BeginForm("UploadTeacherImage", "Teacher", FormMethod.Post,
                                   new { enctype = "multipart/form-data" }))
            {
                <label for="file">Upload Image:</label>
                <input type="file" name="file" id="file" style="width: 100%;" />
                <input type="hidden" name="teacherId" value="{{getTeacherId()}}" />
                <input type="submit" value="Upload" class="submit" />
            }
        </div>
        <div class="qr" ng-hide="!isRegistered" ng-include="'Administration/qrcode'">
        </div>
    </div>
    <div class="left" ng-hide="!isAdmin">
        <div ng-include="'teacher/schedule'"></div>
    </div>
    <div class="left down" ng-controller="TeacherCtrl" ng-hide="!isAdmin">
        <div class="">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone number</th>
                        <th>Title</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="teacher in teachers" ng-click="getShedule(teacher);">
                        <td>{{teacher.FirstName}} {{teacher.LastName}}</td>
                        <td>{{teacher.Email}}</td>
                        <td>{{teacher.Phone}}</td>
                        <td>{{teacher.Title}}</td>
                        <td><button ng-click="delete(teacher.Id)" class="btn btn-default">Delete</button></td>
                    </tr>
                    <tr ng-if="drivers.length == 0">
                        <td colspan="3">
                            <h1>No teachers registered !</h1>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
    <div class="left down" ng-hide="!isAdmin">
        <div id="calendar"></div>
    </div>
</div>